{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "session_manager",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/anbox",
            "args": [
                "session-manager"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ANBOX_LOG_LEVEL",
                    "value": "debug"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-anbox"
        }
    ]
}